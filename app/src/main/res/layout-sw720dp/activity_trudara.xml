<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcloud"
    android:screenOrientation="landscape"
    tools:context="com.example.vien.transportasi.TrudaraActivity">

    <RelativeLayout
        android:layout_width="1300dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:id="@+id/scrollView2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageambalon"
            android:layout_width="210dp"
            android:layout_height="200dp"
            android:background="@drawable/balon" />

        <ImageButton
        android:id="@+id/imagecapung"
        android:layout_width="219dp"
        android:layout_height="192dp"
        android:background="@drawable/capung" />
    <ImageButton
        android:id="@+id/imagehelicopter"
        android:layout_width="219dp"
        android:layout_height="192dp"
        android:background="@drawable/helicopter" />
    <ImageButton
        android:id="@+id/imagejet"
        android:layout_width="219dp"
        android:layout_height="192dp"
        android:background="@drawable/jet" />
    <ImageButton
        android:id="@+id/imageroket"
        android:layout_width="192dp"
        android:layout_height="198dp"
        android:background="@drawable/roket" />
    <ImageButton
        android:id="@+id/imagezep"
        android:layout_width="219dp"
        android:layout_height="180dp"
        android:background="@drawable/zep" />
    <ImageButton
        android:id="@+id/imagepesawat"
        android:layout_width="219dp"
        android:layout_height="192dp"
        android:background="@drawable/pesawat" />
    </LinearLayout>
    </ScrollView>

        <ImageView
            android:id="@+id/imagebalon1"
            android:layout_width="450dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/balon1"
            android:layout_marginRight="126dp"
            android:layout_marginEnd="126dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imagebackud"
            android:layout_toStartOf="@+id/imagebackud" />
        <ImageButton
            android:id="@+id/imagebackud"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
